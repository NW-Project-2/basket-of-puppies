<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div class="grid-header">Dog Name</div>
                <div class="grid-header">Meds?</div>
                <div class="grid-header">Shots Records?</div>
                <div class="grid-header">Owner First Name</div>
                <div class="grid-header">Owner Last Name</div>
                <div class="grid-header">Notes</div>
                <div class="grid-header">Quick Check-in</div>
                <div class="grid-header">Delete</div>
                {{#each dogs}}
                <div class="grid-item">{{dog_name}}</div>
                <div class="grid-item">{{meds}}</div>
                <div class="grid-item">{{shots}}</div>
                <div class="grid-item">{{owner_first_name}}</div>
                <div class="grid-item">{{owner_last_name}}</div>
                <div class="grid-item">{{notes}}</div>
                <button type="button" class="grid-item btn btn-primary text-dark checkIn" data-toggle="modal" data-target="#check_in" data-id="{{id}}" data-check_in="{{check_in}}">Check In</button>
                <button class="grid-item btn btn-danger text-dark deleteDog" data-id="{{id}}"
                    data-check_in="{{delete}}">Delete Dog</button>

                {{else}}
                <p>No dogs to display</p>

                {{/each}}
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="check_in" tabindex="-1" role="dialog" aria-labelledby="check_in_Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="check_in_Label">Check in</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Checked in!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
      </div>
    </div>
  </div>
</div>

<style>
    .grid-container {
        display: grid;
        margin-top: 30px;
        grid-template-columns: auto auto auto auto auto auto auto auto;
        background-color: lightgray;
    }

    .grid-header {
        text-align: center;
        background-color: lightgray;
        border: 1px solid rgba(0, 0, 0, 0.8);
        font-size: 25px;
    }

    .grid-item {
        background-color: lightgray;
        border: 1px solid rgba(0, 0, 0, 0.8);
        font-size: 20px;
        text-align: center;

    }
</style>