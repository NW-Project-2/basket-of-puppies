
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div class="grid-header">Dog Name</div>
                <div class="grid-header">Meds?</div>
                <div class="grid-header">Shots Records?</div>
                <div class="grid-header">Owner First Name</div>
                <div class="grid-header">Owner Last Name</div>
                <div class="grid-header">Notes</div>
                <div class="grid-header">Check-in</div>
                <div class="grid-header">Check-out</div>
                <div class="grid-header">Delete</div>
                {{#each dogs}}
                <div class="grid-item">{{dog_name}}</div>
                <div class="grid-item">{{meds}}</div>
                <div class="grid-item">{{shots}}</div>
                <div class="grid-item">{{owner_first_name}}</div>
                <div class="grid-item">{{owner_last_name}}</div>
                <div class="grid-item">{{notes}}</div>
                <button type="button" class="grid-item btn btn-primary text-dark checkIn" id="checkIn" data-toggle="modal"
                    data-target="#check_in" data-id="{{id}}" data-check_in="{{check_in}}">Check In</button>
                <button type="button" class="grid-item btn btn-success text-dark checkOut" id="checkOut" data-toggle="modal"
                    data-target="#check_out" data-id="{{id}}" data-check_out="{{check_out}}">Check Out</button>
                <button class="grid-item btn btn-danger text-dark deleteDog" data-id="{{id}}"
                    data-check_in="{{delete}}">Delete Dog</button>

                {{else}}
                <p>No dogs to display</p>

                {{/each}}
            </div>
        </div>
    </div>
</div>

<script>
    $('#checkIn').click(function () {
        // show when the button is clicked
        toastr.success("Successfully checked in")
    })
    $('#checkOut').click(function () {
        // show when the button is clicked
        toastr.success("Successfully checked out")
    })
</script>

<style>
    .grid-container {
        display: grid;
        margin-top: 30px;
        grid-template-columns: auto auto auto auto auto auto auto auto auto;
        background-color: lightgray;
    }

    .grid-header {
        text-align: center;
        background-color: lightgray;
        border: 1px solid rgba(0, 0, 0, 0.8);
        font-size: 25px;
    }

    .grid-item {
        background-color: lightgray;
        border: 1px solid rgba(0, 0, 0, 0.8);
        font-size: 20px;
        text-align: center;

    }
</style>