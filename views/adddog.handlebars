<div class="container">
        <div class="row">
                <div class="col-5">
                        <form class="addDog">
                                <label for="name">Dog name:</label><br>
                                <input type="text" id="dog_name" name="dog_name"><br>
                                <label for="owner name">Owner's name:</label><br>
                                <input type="text" id="owner_name" name="owner_name"><br>
                                <label for="owner phone">Owner's phone number:</label><br>
                                <input type="text" id="owner_phone" name="owner_phone"><br>
                                <label for="owner email">Owner's email:</label><br>
                                <input type="text" id="owner_email" name="owner_email"><br>
                                <label for="shots">Up to date on shots?</label><br>
                                <input type="checkbox" id="shots" name="shots" value="true"><br>
                                <label for="meds">Does dog require medicine?</label><br>
                                <input type="checkbox" id="meds" name="meds" value="true"><br>
                                <label for="alt pickup">Name of alternate pickup person:</label><br>
                                <input type="text" id="alt_pickup_name" name="alt_pickup_name"><br></br>
                                <input type="submit" value="Add Dog!" class="btn btn-info">
                        </form>
                </div>
                <div class="col-7">
                        <img class="mb-4" src="assets/img/puppy3.png" alt="puppy">
                </div>
        </div>
</div>