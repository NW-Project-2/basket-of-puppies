<form class="form activities">
    <div class="grid-header">Dog Name</div>
    <div class="grid-header">Owner Name</div>
    <div class="grid-header">Morning Walk<br><span><input type="checkbox" name="select-all" id="select-all-morning"
                class="morning" style="width:30%; height:30%">Select all</span>
    </div>
    <div class="grid-header">Noon Walk<br><span><input type="checkbox" name="select-all" id="select-all-noon"
                style="width:30%; height:30%">Select
            all</span>
    </div>
    <div class="grid-header">Late Walk<br><span><input type="checkbox" name="select-all" id="select-all-late"
                style="width:30%; height:30%">Select
            all</span>
    </div>
    <div class="grid-header">Meds?</div>
    <div class="grid-header">Notes</div>
    <div class="grid-header">Check out</div>

    {{#each dogs}}
    {{#if check_in}}
    <div class="grid-item">{{dog_name}}</div>
    <div class="grid-item">{{owner_first_name}} {{owner_last_name}}</div>
    <div class="grid-item"><input type="checkbox" class="morning_walk" name="morning_walk" value="true"
            style="width:100%; height:100%">{{morning_walk}}</div>
    <div class="grid-item">
        <input type="checkbox" class="midday_walk" name="midday_walk" value="true"
            style="width:100%; height:100%">{{midday_walk}}
    </div>
    <div class="grid-item">
        <input type="checkbox" class="late_walk" name="late_walk" value="true"
            style="width:100%; height:100%">{{late_walk}}
    </div>
    <div class="grid-item meds">{{meds}}</div>
    <div class="grid-item"><input type="text" class="notes" name="notes" placeholder="{{notes}}"></div>
    <button type="button" class="grid-item btn btn-primary text-dark checkOut" data-id="{{id}}"
        data-check_out="{{check_out}}">Check Out</button>
    <div value={{id}} class="dogId" style="display:none"></div>
    {{/if}}
    {{/each}}

</form>

<div class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <button class="btn btn-primary btn-block btn-lg updateActivity">Update</button>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>


<script>
    function getSelectedCheckBoxValues(morning_walk, checked) {
        const checkboxes = document.querySelectorAll(`.morning_walk`);
        console.log(checkboxes)
        let values = [];

        checkboxes.forEach((checkbox) => {
            if (checked === "checked") {
                checkbox.checked = true
            } else {
                checkbox.checked = false
            }

        })
        return values

    }
    $("#select-all-morning").click(function (event) {
        console.log(this.checked)
        if (this.checked) {
            // Iterate each checkbox
            getSelectedCheckBoxValues("morning_walk", "checked")
        } else {
            getSelectedCheckBoxValues("morning_walk", "")
        }
    });
    $("#select-all-noon").click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $(".midday_walk").each(function () {
                this.checked = true;
            });
        } else {
            $(".midday_walk").each(function () {
                this.checked = false;
            });
        }
    });
    $("#select-all-late").click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $(".late_walk").each(function () {
                this.checked = true;
            });
        } else {
            $(".late_walk").each(function () {
                this.checked = false;
            });
        }
    });

    $('.checkOut').click(function () {
        // show when the button is clicked
        toastr.success("Successfully checked out")
    })

</script>

