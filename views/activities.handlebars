<form class="form activities">
    <div class="grid-items">Dog Name</div>
    <div class="grid-items">Owner Name</div>
    <div class="grid-items">Check in</div>
    <div class="grid-items">Morning Walk<br><span><input type="checkbox" name="select-all" id="select-all-morning"
                class="morning" style="width:30%; height:30%">Select all</span>
    </div>
    <div class="grid-items">Noon Walk<br><span><input type="checkbox" name="select-all" id="select-all-noon"
                style="width:30%; height:30%">Select
            all</span>
    </div>
    <div class="grid-items">Late Walk<br><span><input type="checkbox" name="select-all" id="select-all-late"
                style="width:30%; height:30%">Select
            all</span>
    </div>
    <div class="grid-items">Meds?</div>
    <div class="grid-items">Notes</div>
    <div class="grid-items">Check out</div>

    {{#each dogs}}
    <div class="grid-items">{{dog_name}}</div>
    <div class="grid-items">{{owner_first_name}} {{owner_last_name}}</div>
    <div class="grid-items"><button>Check in</button></div>
    <input type="checkbox" id="morning_walk" name="morning_walk" value="true"
        style="width:100%; height:100%">{{morning_walk}}
    <input type="checkbox" id="midday_walk" name="midday_walk" value="true"
        style="width:100%; height:100%">{{midday_walk}}
    </div>
    <input type="checkbox" id="late_walk" name="late_walk" value="true" style="width:100%; height:100%">{{late_walk}}
    </div>
    <div class="grid-items">{{meds}}</div>
    <div class="grid-items"><input type="text" id="notes" name="notes" placeholder="{{notes}}"></div>
    <div class="grid-items"><button>Check out</button></div>
    <div value={{id}} id="dogId" style="display:none"></div>
    {{/each}}
</form>

<div class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <button class="btn btn-primary btn-block btn-lg updateActivity">Update</button>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>


<script>
    $("#select-all-morning").click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $("#morning_walk").each(function () {
                this.checked = true;
            });
        } else {
            $("#morning_walk").each(function () {
                this.checked = false;
            });
        }
    });
    $("#select-all-noon").click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $("#midday_walk").each(function () {
                this.checked = true;
            });
        } else {
            $("#midday_walk").each(function () {
                this.checked = false;
            });
        }
    });
    $("#select-all-late").click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $("#late_walk").each(function () {
                this.checked = true;
            });
        } else {
            $("#late_walk").each(function () {
                this.checked = false;
            });
        }
    });
</script>

<style>
    span {
        font-size: smaller;
    }

    .form {
        display: grid;
        margin-top: 30px;
        grid-template-columns: auto auto auto auto auto auto auto auto auto;
        background-color: #2196F3;
        padding: 10px;
        grid-gap: 5px;
        margin-left: 30px;
        margin-right: 30px;
    }

    .updateActivity {
        margin-top: 30px
    }

    .grid-items {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 20px;
        text-align: center;
    }
</style>