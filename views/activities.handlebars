    span {
        font-size: smaller;
    }

    .activities {
        display: grid;
        margin-top: 30px;
        grid-template-columns: auto auto auto auto auto auto auto auto;
        background-color: lightgray;
        padding: 10px;
        margin-left: 30px;
        margin-right: 30px;
    }

    .updateActivity {
        margin-top: 30px
    }

    .grid-header {
        text-align: center;
        background-color: lightgray;
        font-size: 25px;
        border: 1px solid rgba(0, 0, 0, 0.8);
    }

    .grid-item {
        background-color: lightgray;
        border: 1px solid rgba(0, 0, 0, 0.8);
        font-size: 20px;
        text-align: center;
    }
</style>